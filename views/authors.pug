extends layout

block content
    h3 Add Author
    div.row
        form(action="/upload/author" method="POST" class="div col s12 l6" id="form2")
            input(type="text" name="firstname" class="input-field" placeholder="First Name" autocomplete)
            input(type="text" name="lastname" placeholder="Last Name" autocomplete)
            input(type="date" class="input-field" name="year" autocomplete)
            div.input-field
                select(name="country" id="countries")
                    each val,i in countries
                        option(value=val)=val
            div.inputfield
                input(type="submit" class='btn red')




